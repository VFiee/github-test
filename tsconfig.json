{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@Util/*": [
        "src/util/*"
      ],
      "@Components/*": [
        "src/components/*"
      ],
      "@Hooks/*": [
        "src/hooks/*"
      ],
      "@Pages/*": [
        "src/pages/*"
      ],
      "@Test/*": [
        "src/test/*"
      ],
      "@TRender": [
        "src/test/render/index.tsx"
      ],
      "@THook": [
        "src/test/hook/index.tsx"
      ],
      "@Images": [
        "src/assets/images/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}